{
  "settings": {
    "analysis": {
      "filter": {
        "code_word_delim": {
          "type": "word_delimiter_graph",
          "preserve_original": true,
          "split_on_case_change": true,
          "split_on_numerics": true,
          "generate_word_parts": true,
          "generate_number_parts": true,
          "catenate_words": true,
          "catenate_numbers": true,
          "catenate_all": true,
          "type_table": [
            "_ => ALPHANUM"
          ]
        }
      },
      "analyzer": {
        "code_analyzer": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": [
            "lowercase",
            "code_word_delim"
          ]
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "id": { "type": "keyword" },
      "repo": { "type": "keyword" },
      "language": { "type": "keyword" },
      "filePath": { "type": "keyword" },
      "symbolKind": { "type": "keyword" },
      "symbolName": { "type": "keyword", "fields": { "text": { "type": "text", "analyzer": "code_analyzer" } } },
      "signature": { "type": "text", "analyzer": "code_analyzer" },
      "startLine": { "type": "integer" },
      "endLine": { "type": "integer" },
      "content": { "type": "text", "analyzer": "code_analyzer" },
      "contentVector": { "type": "dense_vector", "dims": 2048 }
    }
  }
}
